<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="kwmc.tool.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox alignment="CENTER">
        <Button fx:id="chooseFileBtn" text="Choose File" onAction="#chooseFile" prefWidth="200"/>
        <spacing/>
        <TextField fx:id="fileNameTextField"/>
    </HBox>
    <HBox alignment="CENTER">
        <Button fx:id="browseBtn" text="browse" onAction="#browse"/>
        <HBox.margin>
            <Insets right="20.0"/>
        </HBox.margin>
        <TextField fx:id="folderLocationTextField"/>
    </HBox>
    <Button text="Convert" onAction="#convert"/>
</VBox>
