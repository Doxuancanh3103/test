<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ProgressBar?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="kwmc.tool.ConvertController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox alignment="CENTER">
        <HBox alignment="BASELINE_LEFT" prefWidth="150">
            <Button fx:id="chooseFileBtn" text="Choose File" onAction="#chooseFile" prefWidth="100"/>
        </HBox>
        <HBox alignment="BASELINE_LEFT" prefWidth="200">
            <TextField fx:id="fileNameTextField" editable="false" prefWidth="200"/>
        </HBox>
    </HBox>
    <Button fx:id="convertBtn" text="Convert" onAction="#convert"/>
    <ProgressBar fx:id="progressBar" prefWidth="500" prefHeight="30" progress="0.0" visible="false"></ProgressBar>
</VBox>
